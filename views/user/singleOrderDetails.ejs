  <body>

        <!-- HERO SECTION-->
        <section class="py-5 bg-light">
          <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
              <div class="col-lg-12">
                <h1 class="h1  mb-0">Order details</h1>
              </div>  
            </div>
          </div>
        </section>
        <section class="py-5 container ">
            <!-- ORDER SUMMARY-->
            <div class="row"> 
                <div class="col-md-12">
                    <div class="card border-0 rounded-0 p-lg-4 bg-light">
                      <div class="card-body">
                        <% if(orderedProducts){  %>  
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                          
                                            <th scope="col">Product Name</th>
                                            <th scope="col">Product Image</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">quantity</th>
                                   
                                        </tr>
                                    </thead>
                                    <tbody>
                                       <%orderedProducts.forEach((product)=>{%>  
                                        <tr style="font-weight: normal;">
                                            <td>
                                                <h5 class="font-weight-normal"><%=product.productId.name%></h5>
                                                </td>
                                                <td>
                                                <img src="/<%=product.productId.imagePath%>" alt=".."width="100">
                                              </td>
                                                <td>
                                                <h5 class="font-weight-normal">â‚¹ <%=product.productId.srp%></h5>
                                              </td>
                                              <td>
                                                <h5 class="font-weight-normal"><%=product.quantity%></h5>
                                            </td>
                                        </tr>
                                      <%})%>    
                                    </tbody>
                                </table>
                            </div>
                  
                     </div>
                    </div>                 
                  </div>
                    
                             
            </div> 
            <%}else{%> 
                <h1>There have no orders in your account</h1>
              <%}%>         
        </section>  
      <!-- JavaScript files-->
      <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <script src="vendor/glightbox/js/glightbox.min.js"></script>
      <script src="vendor/nouislider/nouislider.min.js"></script>
